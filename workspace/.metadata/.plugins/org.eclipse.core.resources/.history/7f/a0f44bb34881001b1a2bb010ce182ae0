package ex01_random;

import java.util.Scanner;

// 4. 가위바위보
// 가위바위보 >> 가위
// Player는 가위, Computer는 보, 이겼습니다.
// 가위바위보 >> 바위
// Player는 바위, Computer는 바위, 비겼습니다.
// 가위바위보 >> 보
// Player는 보, Computer는 가위, 졌습니다.
// 1승 1무 입니다.

public class Quiz04 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		String[] gababo = { "가위", "바위", "보" };
		
		while(true) {
			
			int computer = (int)(Math.random() * 3);  // gababo 배열의 인덱스
			
			System.out.print("가위바위보>>");
			String Player = sc.next();
			
			if(Player.equals("가위") {
				if(computer == 0) {
					System.out.println("Player는" + Player + "computer는 " + gababo[computer] + ", 비겼습니다.");
				}
			}
			
			
			
			
		}
		
		
		
		
		
		

	}

}
