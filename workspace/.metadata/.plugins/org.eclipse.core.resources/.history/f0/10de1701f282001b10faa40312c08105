package quiz04;

public class Soldier {

	private String name;
	private Gun gun;

	public Soldier(String name, Gun gun) {
		this.name = name;
		this.gun = gun;
	}

	public void shoot() {
		// 빵야! 1발 남았다.
		System.out.println("빵야! " + bullet + "발 남았다.");
	}

	public void reload(int bullet) {
		// 2발이 장전되었다. 현재 2발.
		System.out.println(bullet + "발이 장전되었다. 현재 " + bullet + "발.");
	}

	public void info() {
		// 람보, K2에 6발 남았다.
		System.out.println(name + ", " + model + "에 " + bullet + "발 남았다.");
	}

}
