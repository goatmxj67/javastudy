package quiz01;

public class Watch {

	private int time;
	private int minute;
	private int second;
	
	public Watch(int time, int minute, int second) {
		this.time = time;
		this.minute = minute;
		this.second = second;		
	}

	public void addHour(int t) {
		time += t;
	}

	public void addMinute(int m) {
		minute += m;
		
	}

	public void addSecond(int s) {
		second += s;
	}

	public void see() {
		System.out.println(time + "시 " + minute + "분 " + second + "초" );
	}

	
	
	
	
	
}
